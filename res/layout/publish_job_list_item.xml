<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/pjob_item_block"
        style="@style/system_2macth"
        android:layout_centerInParent="true"
        android:paddingBottom="5dip"
        android:paddingTop="5dip" >

        <RelativeLayout
            android:id="@+id/delete_job_block"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                android:id="@+id/publish_job_delete_btn"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="5dip"
                android:layout_marginBottom="10dip"
                android:background="@drawable/collection_delete_icon" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/top_block"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/delete_job_block"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/pjob_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dip"
                android:text="小时工"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/pjob_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dip"
                android:layout_toRightOf="@id/pjob_name"
                android:background="@drawable/job_item_time_bg"
                android:padding="2dip"
                android:text="时"
                android:textColor="@color/job_red"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/pjob_charge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dip"
                android:padding="2dip"
                android:text="佣金"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/top_block"
            android:layout_marginTop="5dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/pjob_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dip"
                android:text="人数"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/pjob_createtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dip"
                android:drawableLeft="@drawable/alert_icon"
                android:drawablePadding="2dip"
                android:padding="2dip"
                android:text="时间"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>