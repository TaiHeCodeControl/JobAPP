<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:maskimage="http://schemas.android.com/apk/res/com.parttime.parttimejob"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_gray"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/job_managed_item_block"
        android:layout_width="match_parent"
        android:layout_height="70dip"
        android:background="@color/white"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dip"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="2dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/job_managed_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:padding="2dip"
                android:text="小白"
                android:textSize="17sp" />

            <CheckBox
                android:id="@+id/job_managed_checked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                 />

            <!--
            <RelativeLayout
                android:id="@+id/job_managed_personal_headimage_block"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="2.0"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:visibility="visible" >

                <com.parttime.view.MaskImage
                    android:id="@+id/job_managed_personal_headimage"
                    android:layout_width="60dip"
                    android:layout_height="60dip"
                    android:layout_centerInParent="true"
                    android:adjustViewBounds="true"
                    android:background="@drawable/signed_on_default"
                    android:contentDescription="@string/img_description"
                    maskimage:frame="@drawable/personal_center_head_frame"
                    maskimage:image="@drawable/signed_on_default"
                    maskimage:mask="@drawable/personal_center_head_mask_small" />
            </RelativeLayout>-->

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/job_managed_relase_relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip" 
            android:orientation="horizontal">

            <TextView
                android:id="@+id/job_managed_time"
                android:layout_width="0dip"
                android:layout_weight="2.5"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/alert_icon"
                android:drawablePadding="2dip"
                android:gravity="center_vertical"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="2015-2-4"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/job_managed_distance"
                android:layout_width="0dip"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/bitmap_sign"
                android:drawablePadding="2dip"
                android:layout_marginRight="20dip"
                android:gravity="center_vertical"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="300/cm"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>