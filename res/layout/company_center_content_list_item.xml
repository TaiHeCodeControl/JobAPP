<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/company_center_content_item_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:baselineAligned="false"
        android:minHeight="50dip"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/company_content_image"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:layout_marginLeft="20dip"
            android:contentDescription="@string/img_description"
            android:scaleType="fitXY"
            />

        <TextView
            android:id="@+id/company_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dip"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@color/darkgray"
            android:textSize="18sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/company_tips_img"
        android:layout_width="15dip"
        android:layout_height="15dip"
        android:layout_alignTop="@id/company_center_content_item_layout"
        android:layout_alignRight="@id/company_center_content_item_layout"
        android:background="@null"
        android:src="@drawable/red_dot"
        android:contentDescription="@string/img_description"
        android:scaleType="fitXY"
        android:visibility="gone" />

</RelativeLayout>