<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:maskimage="http://schemas.android.com/apk/res/com.parttime.parttimejob"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_gray"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/employment_item_block"
        android:layout_width="match_parent"
        android:layout_height="80dip"
        android:background="@color/white"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/employment_relase_relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="5dip" >

            <TextView
                android:id="@+id/employment_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dip"
                android:text="小白"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/employment_jobtype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_toRightOf="@id/employment_username"
                android:padding="2dip"
                android:background="@drawable/job_item_time_bg"
                android:text="时"
                android:textColor="@color/job_red"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/employment_distime_relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="5dip" 
            android:orientation="horizontal">

            <TextView
                android:id="@+id/employment_time"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:drawableLeft="@drawable/time_icon"
                android:drawablePadding="2dip"
                android:gravity="center_vertical"
                android:ellipsize="end"
                android:singleLine="true"
                android:padding="2dip"
                android:text="2015-2-4"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/employment_distance"
                android:layout_width="0dip"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/bitmap_sign"
                android:layout_marginRight="20dip"
                android:gravity="center_vertical"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="300/cm"
                android:textSize="14sp" />

        </LinearLayout>

