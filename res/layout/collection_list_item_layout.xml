<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_gray"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/collection_item_block"
        android:layout_width="match_parent"
        android:layout_height="80dip"
        android:layout_marginTop="15dip"
        android:background="@color/white"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/collection_relase_relative"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dip"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/collection_job_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="2dip"
                android:background="@drawable/job_item_time_bg"
                android:text="时"
                android:textColor="@color/job_red"
                android:textSize="12sp" />

            <RatingBar
                android:id="@+id/collection_home_ratingBar"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="15dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/collection_job_sign"
                android:isIndicator="false"
                android:max="5"
                android:numStars="5"
                android:stepSize="1" />

            <TextView
                android:id="@+id/collection_job_delete_btn"
                android:layout_width="30dip"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/collection_delete_icon" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/collection_job_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:maxEms="4"
                android:singleLine="true"
                android:text="小时工"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/collection_job_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="30/小时"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/collection_job_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/bitmap_sign"
                android:text="300m"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/collection_location_relative"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/collection_company_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="发布人：李白"
                android:textColor="@color/job_gray"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/collection_job_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="2015-01-12"
                android:textColor="@color/job_gray"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>