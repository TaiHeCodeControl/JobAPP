<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/job_linear"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:baselineAligned="true"
    android:padding="5dp" >

    <RelativeLayout
        android:id="@+id/relase_relative"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/job_sign_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/job_item_time_bg"
            android:padding="2dp"
            android:text="时"
            android:textColor="@color/job_red"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/job_sign_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/job_item_time_green"
            android:padding="2dp"
            android:text="天"
            android:textColor="@color/green"
            android:textSize="12sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/job_sign_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/job_item_time_blue"
            android:padding="2dp"
            android:text="周"
            android:textColor="@color/light_blue"
            android:textSize="12sp"
            android:visibility="invisible" />

        <ProgressBar
            android:id="@+id/home_ratingBar"
            android:layout_width="75dp"
            android:layout_height="12dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/job_sign_time"
            android:indeterminateOnly="false"
            android:max="5"
            android:progressDrawable="@drawable/credit_progress"
            android:visibility="gone" />

        <TextView
            android:id="@+id/company_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/job_name"
            android:padding="5dp"
            android:textColor="@color/job_gray"
            android:textSize="10sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/job_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/job_sign_time"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/job_sign_time"
            android:maxEms="6"
            android:singleLine="true"
            android:text="打字员"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/job_time"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/job_sign_time"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/alert_icon"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="2015年6月24日"
            android:textColor="@color/job_gray"
            android:textSize="10sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/job_price_relative"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_marginTop="5dp"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/job_num"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/job_price"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:padding="5dp"
            android:text="500块"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/location_relative"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/job_distance_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bitmap_sign" />

        <TextView
            android:id="@+id/job_distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/job_distance_sign"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="500.0km" />
    </RelativeLayout>

</LinearLayout>