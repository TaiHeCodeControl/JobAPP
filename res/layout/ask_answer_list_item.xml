<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ask_answer_list_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/white"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/askanswer_item_content_block"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_weight="3" >

            <TextView
                android:id="@+id/askanswer_item_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dip"
                android:maxLines="3"
                android:ellipsize="end"
                android:text="内容"
                android:textColor="@color/job_gray"
                android:textSize="15sp" />
            
             <TextView
                android:id="@+id/askanswer_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dip"
                android:layout_below="@id/askanswer_item_content"
                android:singleLine="true"
                android:text="2015-01-12"
                android:textColor="@color/job_gray"
                android:textSize="12sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/askanswer_listitem_relative"
            android:layout_width="120dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dip"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/askanswer_item_name"
                android:layout_width="wrap_content"
                android:layout_height="0dip"
                android:layout_margin="5dip"
                android:layout_weight="1.0"
                android:text="李白"
                android:textColor="@color/job_gray"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/askanswer_item_call"
                android:layout_width="wrap_content"
                android:layout_height="0dip"
                android:layout_margin="5dip"
                android:layout_weight="1.0"
                android:text="手机"
                android:textColor="@color/job_gray"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>